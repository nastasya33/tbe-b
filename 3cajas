                        function creaEnlaces(url){
                          window.parent.location.href = url;                    
                        }                       
                        
                        function insertarImagenDestacada1()
                        {
                                //BLOQUE1
                                var firstblock="";
                                
                                if (VarImagenDestacadaFirstBlock!="")
                                {
                                        firstblock+='<img style=\"float: left;\" src=\"' + VarImagenDestacadaFirstBlock + '\">';        
                                }
                                return firstblock;
                    }   
                        
                        function insertarImagenDestacada2()
                        {
                                //BLOQUE2
                                var secondblock="";
                                if (VarImagenDestacadaSecondBlock!="")
                                {
                                        secondblock+='<img style=\"float: left;\" src=\"' + VarImagenDestacadaSecondBlock + '\">';      
                                }
                                return secondblock;
                    }
                        function insertarImagenDestacada3()
                        {
                                //BLOQUE3
                                var thirdblock="";
                                if (VarImagenDestacadaThirdBlock!="")
                                {
                                        thirdblock+='<img style=\"float: left;\" src=\"' + VarImagenDestacadaThirdBlock + '\">';        
                                }
                                
                                return thirdblock;
                    }
                        
                        function insertarBotonBlock1()
                        {
                                var html="";
                                if ((VarBlock1BotonTexto!="")&&(VarBlock1BotonURL!=""))
                                {
                                        html+='<a href=\"' + VarBlock1BotonURL + '\" title=\"' + VarBlock1BotonTexto + '\" target=\"_parent\" class=\"enlaceboton margintop\">' + VarBlock1BotonTexto + '</a>';
                                }                       
                                return html;
                        }
                        
                        
                        function insertarBotonBlock2()
                        {
                                var html="";
                                if ((VarBlock2BotonTexto!="")&&(VarBlock2BotonURL!=""))
                                {
                                        html+='<a href=\"' + VarBlock2BotonURL + '\" title=\"' + VarBlock2BotonTexto + '\" target=\"_parent\" class=\"enlaceboton margintop\">' + VarBlock2BotonTexto + '</a>';
                                }
                                return html;
                        }                       
                        
                        function insertarBotonBlock3()
                        {
                                var html="";
